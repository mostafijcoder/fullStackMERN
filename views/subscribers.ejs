<link rel="stylesheet" href="/css/subscribers.css">  <!-- ✅ Link the stylesheet -->

<div class="container">
    <h1>Subscribers List</h1>

    <!-- ✅ Search form to filter by ZIP Code -->
    <form id="searchForm">
        <label for="zipCode">Search by ZIP Code:</label>
        <input type="number" id="zipCode" name="zipCode" required placeholder="Enter ZIP Code">
        <button type="submit" id="search-btn">Search</button>
    </form>

    <!-- Table to display subscribers -->
    <table>
        <thead>
            <tr>
                <th>Serial No.</th>
                <th>Name</th>
                <th>Email</th>
                <th>Zip Code</th>  
            </tr>
        </thead>
        <tbody id="subscriberTable"> <!-- Added id for dynamic table updates -->
            <% subscribers.forEach((subscriber, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>  <!-- ✅ Serial Number -->
                    <td><%= subscriber.name %></td>
                    <td><%= subscriber.email %></td>
                    <td><%= subscriber.zipCode %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <table>
        <tr>
            <th>Subscriber Info</th>
        </tr>
        <% subscribers.forEach(subscriber => { %>
            <tr>
                <td><%= subscriber.getInfo() %></td>
            </tr>
        <% }); %>
    </table>
    
    <a href="/" class="btn">Go Back to Home</a>
</div>

<input type="text" id="zipCodeInput" placeholder="Enter Zip Code">
<button id="searchByZip">Find Local Subscribers</button>

<div id="results"></div>

<script src="/js/subscribers.js"></script>

