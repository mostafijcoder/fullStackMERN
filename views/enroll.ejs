<link rel="stylesheet" href="/css/enroll.css">

<div class="container">
    <h1>Enroll in a Course</h1>

    <form action="/enroll" method="POST">
        <label for="subscriberName">Name:</label>
        <input type="text" name="name" required>
    
        <label for="subscriberEmail">Email:</label>
        <input type="email" name="email" required>
    
        <label for="zipCode">Zip Code:</label>
        <input type="number" name="zipCode" required> <!-- âœ… Ensure zipCode is provided -->
    
        <label for="course">Select Course:</label>
        <select name="courseId" required>
            <% if (courses.length > 0) { %>
                <% courses.forEach(course => { %>
                    <option value="<%= course._id %>">
                        <%= course.title %> - Available in <%= (course.zipCodes || []).join(", ") %>
                    </option>
                <% }); %>
            <% } else { %>
                <option disabled>No courses available</option>
            <% } %>
        </select>
    
        <button type="submit">Enroll</button>
    </form>
    

        <label>
            <input type="radio" name="multiple" value="false" checked> Single Course Enrollment
        </label>
        <label>
            <input type="radio" name="multiple" value="true"> Multiple Courses Enrollment
        </label>

        
    </form>

    <div id="message"></div>
    <a href="/" class="btn">Go Back</a>
</div>

<script src="/js/enroll.js"></script>
