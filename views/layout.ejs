<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== "undefined" ? title : "Recipe App" %></title>

    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include("partials/navigation") %> <!-- ✅ Fixed include syntax -->

    <% if (typeof showNotification !== "undefined" && showNotification) { %>

        <%- include("partials/notification") %> <!-- ✅ Fixed include syntax -->
    <% } %>

    <main>
            <% if (flashMessages.error) { %>
              <div class="flash flash-error">
                <% flashMessages.error.forEach(msg => { %>
                  <p><%= msg %></p>
                <% }) %>
              </div>
            <% } %>
          
            <% if (flashMessages.success) { %>
              <div class="flash flash-success">
                <% flashMessages.success.forEach(msg => { %>
                  <p><%= msg %></p>
                <% }) %>
              </div>
            <% } %>
          
            <%- body %> <!-- Page-specific content -->
    </main>

    <footer>
        <p>&copy; 2025 Confetti Cuisine</p>
    </footer>
</body>
</html>
